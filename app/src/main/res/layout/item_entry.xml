<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="5dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp">

    <View
        android:id="@+id/highlightColour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#43DA21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:0.5"
        app:layout_constraintEnd_toStartOf="@id/entryTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/highlightColourOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="#CCFFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/highlightColour"
        app:layout_constraintEnd_toEndOf="@id/highlightColour"
        app:layout_constraintStart_toStartOf="@id/highlightColour"
        app:layout_constraintTop_toTopOf="@id/highlightColour" />

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/highlightColourOverlay"
        app:layout_constraintEnd_toEndOf="@id/highlightColourOverlay"
        app:layout_constraintStart_toStartOf="@id/highlightColourOverlay"
        app:layout_constraintTop_toTopOf="@id/highlightColourOverlay" />

    <TextView
        android:id="@+id/entryTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="text"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/highlightColour"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>